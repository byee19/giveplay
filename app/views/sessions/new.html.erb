
<div class="container">
  <div class="row">
    <div class="span9">
    	
		<h1>Log In</h1>

		<%= form_tag sessions_path do %>
		  <div class="field">
		    <%= label_tag :email %><br />
		    <%= text_field_tag :email, params[:email] %>
		  </div>
		  <div class="field">
		    <%= label_tag :password %><br />
		    <%= password_field_tag :password %>
		  </div>
		  <div class="actions"><%= submit_tag "Log In" %></div>
		<% end %>

    </div>
    <div class="span3">
      <h2>About Us</h2>
		<p>Welcome to GivePlay!</p>

    </div>
  </div>
</div>



